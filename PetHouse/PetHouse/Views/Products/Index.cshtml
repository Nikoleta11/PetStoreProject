@model IEnumerable<PetHouse.Data.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    .cards-container {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        flex-wrap: wrap;
        padding: 10px;
        border: 2px solid black;
    }

    .card {
        width: 20%;
        display: flex;
        flex-direction: column;
        border: 2px solid black;
        margin: 0px 5px;
        margin-bottom: 50px;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-title {
        text-align: center;
        margin: 0px;
        background-color: #9bcbeb;
        color: white;
        font-weight: 500;
        font-size: 20px;
        border-bottom: 2px solid black;
    }

    .card-image {
        display: flex;
        align-items: center;
        justify-content: center;
        vertical-align: middle;
        height: 251.35px;
        border-bottom: 2px solid black;
    }

        .card-image img {
            max-width: 225px;
        }
        .card-description{
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        .card-price span{
            font-size: 24px;
            text-shadow: 1px 1px #9bcbeb, 2px 2px #9bcbeb;
            font-weight: 600;
        }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="cards-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-title"><span>@Html.DisplayFor(model => item.Name)</span></div>
            <div class="card-image">
                <div><img src="@Html.DisplayFor(model => item.Image)" /></div>
            </div>
            <div class="card-description">
                <div style="font-size: 18px; font-weight: 600;">@Html.DisplayFor(model => item.Quantity)</div>
                <div class="card-price"><span>@Html.DisplayFor(model => item.Price) лв.</span> </div>
            </div>

        </div>

    }
</div>
